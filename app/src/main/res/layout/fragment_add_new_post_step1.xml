<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/second_white"
    tools:context=".addNewPost.step1.AddNewPostStep1Fragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/add_new_post_step1_close_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:tint="@color/button_blue"
        android:src="@drawable/ic_close"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/add_new_post_step1_target_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Step by step, stay consistent, and achieve your goal!"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="#333333"
        android:textSize="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_new_post_step1_close_btn" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/add_new_post_step1_target_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/rocket_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_new_post_step1_target_title"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:tint="#333333"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/add_new_post_step1_target_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_new_post_step1_target_icon"
        android:padding="8dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>